<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  rectangle buttons styles  -->
    <style name="Theme.CinemaProject.ButtonStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_weight">700</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:paddingTop">@dimen/padding_13</item>
        <item name="android:paddingBottom">@dimen/padding_13</item>
        <item name="android:paddingEnd">@dimen/padding_32</item>
        <item name="android:paddingStart">@dimen/padding_32</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.CinemaProject.EmptyButtonStyle" parent="Theme.CinemaProject.ButtonStyle">
        <item name="android:textColor">@drawable/empty_button_on_click_selector</item>
        <item name="android:background">@drawable/empty_button_background</item>
    </style>

    <style name="Theme.CinemaProject.FilledButtonStyle" parent="Theme.CinemaProject.ButtonStyle">
        <item name="android:textColor">@drawable/filled_button_on_click_selector</item>
        <item name="android:background">@drawable/red_button_background</item>
    </style>

    <!--  edit texts style  -->
    <style name="Theme.CinemaProject.EditTextStyle">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:paddingTop">@dimen/padding_13</item>
        <item name="android:paddingBottom">@dimen/padding_13</item>
        <item name="android:paddingStart">@dimen/padding_16</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:textColorHint">@color/grey_secondary_text_color</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--  texts style  -->
    <style name="Theme.CinemaProject.Headline1">
        <item name="android:fontWeight">700</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CinemaProject.Headline1_Red" parent="Theme.CinemaProject.Headline1">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Theme.CinemaProject.Headline1_White" parent="Theme.CinemaProject.Headline1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.CinemaProject.Headline2">
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Theme.CinemaProject.Headline4">
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_24</item>

    </style>

    <style name="Theme.CinemaProject.Headline3">
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="Theme.CinemaProject.Title">
        <item name="android:fontWeight">500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="Theme.CinemaProject.Text1">
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Theme.CinemaProject.Text2">
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="Theme.CinemaProject.Text3">
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/grey_text_color</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_24</item>
    </style>

    <style name="Theme.CinemaProject.Text4">
        <item name="android:fontWeight">700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="Theme.CinemaProject.DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.CinemaProject.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:translationZ">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateTint">@color/red</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="Theme.CinemaProject.GenreStyle" parent="Theme.CinemaProject.Text1">
        <item name="android:background">@drawable/red_button_background</item>
        <item name="android:paddingHorizontal">@dimen/padding_16</item>
        <item name="android:paddingVertical">@dimen/padding_1</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_4</item>
    </style>

</resources>